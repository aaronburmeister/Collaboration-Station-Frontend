<form id="login" {{on "submit" this.login}}>
    <h2>Log In</h2>

    <label for="login-username">Username:</label>
    <Input @value={{this.username}} id="login-username" placeholder="Username" />

    <label for="login-password">Password:</label>
    <Input type="password" @value={{this.password}} id="login-password" placeholder="Password" />

    <Input type="submit" class="submit-input-signup-login" value="Log In" />
</form>